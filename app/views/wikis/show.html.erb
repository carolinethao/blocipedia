<h1><%= @wiki.title %></h1>
  <%= link_to "Edit Wiki", edit_wiki_path, class: 'btn btn-success' if policy(@wiki).edit? %>

  <%= link_to "Delete Wiki", @wiki, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this wiki?' } if policy(@wiki).destroy? %>

  <%= link_to "Edit Collaborators", new_wiki_collaborator_path(@wiki), class: 'btn btn-info' if policy(@wiki).private? %>

<p><%= markdown(@wiki.body) %></p>
